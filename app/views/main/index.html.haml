#announcementsWindow.w-full.h-screen.px-12.hidden{data: { controller: "announcement" }}
  - @announcements.each do |announcement|
    .w-full.h-full.flex.flex-col.items-start.justify-center.hidden{data: { announcement_target: "announcement", duration: announcement.show_duration }}
      %h2.text-white.text-7xl.mb-2
        = announcement.title
      %p.text-amber-400.text-2xl
        = announcement.body
#iqamahWindow.w-full.h-screen.flex.items-center.justify-center.hidden{data: { controller: "iqamah" }}
  .text-white.text-9xl.text-center{data: {iqamah_target: "text"}}
    = t(:iqamah_label, time: t("times.#{@pray_time_service.active_time_name}", locale: :tr), locale: :tr)
    %br
    = t(:iqamah_label, time: t("times.#{@pray_time_service.active_time_name}", locale: :de), locale: :de)
#timesWindow.grid.grid-cols-12.gap-2.w-full.h-screen
  .hidden.h-full.flex-col.items-center.justify-around.py-4.md:flex.md:col-span-7
    #current_time
      = render "main/current_time", pray_time: @pray_time
    #remained_time
      = render "main/remained_time", pray_time: @pray_time
  #pray_times.col-span-12.h-full.flex.flex-col.items-center.justify-around.py-4.md:col-span-5
    = render "main/pray_times", pray_time: @pray_time
