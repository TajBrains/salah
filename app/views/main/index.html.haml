#iqamahWindow.w-full.h-screen.flex.items-center.justify-center.hidden{data: { controller: "iqamah" }}
  %h3.text-white.text-10xl{data: {iqamah_target: "text"}}
    = t(:iqamah_label, time: t("times.#{@pray_time_service.active_time_name}", locale: :tr))
#timesWindow.grid.grid-cols-12.gap-2.w-full.h-screen{ data: {watcher_target: "timesWindow"} }
  .hidden.h-full.flex-col.items-center.justify-around.py-4.md:flex.md:col-span-7
    #current_time
      = render "main/current_time", pray_time: @pray_time
    #remained_time
      = render "main/remained_time", pray_time: @pray_time
  #pray_times.col-span-12.h-full.flex.flex-col.items-center.justify-around.py-4.md:col-span-5
    = render "main/pray_times", pray_time: @pray_time
