.flex.flex-col.items-center.justify-around.space-y-6{data: { controller: "remained-time", remained_time: { next_time_value: @pray_time_service.next_time.strftime("%Y-%m-%d %H:%M") } }}
  .text-white.text-6xl.font-medium.text-center
    - time = t("times.#{@pray_time_service.next_time_name}", locale: :tr)
    =  @pray_time_service.next_time_name.to_s.include?("iqamah") ? t(:remained_iqamah, time: time) : t(:remained_azan, time: time)
  .text-8xl.font-medium.text-amber-400{ data: { remained_time_target: "time" } } 00:00:00
